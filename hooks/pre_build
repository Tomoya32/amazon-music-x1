#!/bin/bash
echo "=> Building Environmental Variables for $NODE_ENV environment"
if [ "$NODE_ENV" == "production" ]; then
    REACT_APP_AMAZON_MUSIC_BASE_URL=$PROD_REACT_APP_AMAZON_MUSIC_BASE_URL
    REACT_APP_AMAZON_API_BASE_URL=$PROD_REACT_APP_AMAZON_API_BASE_URL
elif [ "$NODE_ENV" == "staging" ]; then
    REACT_APP_AMAZON_MUSIC_BASE_URL=$STAGE_REACT_APP_AMAZON_MUSIC_BASE_URL
    REACT_APP_AMAZON_API_BASE_URL=$STAGE_REACT_APP_AMAZON_API_BASE_URL
else
    REACT_APP_AMAZON_MUSIC_BASE_URL=$DEV_REACT_APP_AMAZON_MUSIC_BASE_URL
    REACT_APP_AMAZON_API_BASE_URL=$DEV_REACT_APP_AMAZON_API_BASE_URL
fi
echo "=> Building with REACT_APP_AMAZON_MUSIC_BASE_URL $REACT_APP_AMAZON_MUSIC_BASE_URL"
echo "=> Building with REACT_APP_AMAZON_API_BASE_URL $REACT_APP_AMAZON_API_BASE_URL"

docker build \
--build-arg REACT_APP_AMAZON_MUSIC_BASE_URL=${REACT_APP_AMAZON_MUSIC_BASE_URL} \
--build-arg REACT_APP_AMAZON_API_BASE_URL=${REACT_APP_AMAZON_API_BASE_URL}  \
. -t $IMAGE_NAME

if [ -e .env ]; then
    echo ".env file already exists"
else
    echo "REACT_APP_AMAZON_MUSIC_BASE_URL=$REACT_APP_AMAZON_MUSIC_BASE_URL" > .env
    echo "REACT_APP_AMAZON_API_BASE_URL=$REACT_APP_AMAZON_API_BASE_URL" >> .env
fi